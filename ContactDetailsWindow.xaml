<Window x:Class="Contacts.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Title="ContactDetailsWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="First Name:"/>
            <TextBox x:Name="firstNameTextBox"/>
            <TextBlock Text="Last Name:"/>
            <TextBox x:Name="lastNameTextBox"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="emailTextBox"/>
            <TextBlock Text="Phone Number:"/>
            <TextBox x:Name="phoneTextBox"/>
            <Button x:Name="updateButton" Content="Update" Click="UpdateButton_Click"
                    Margin="0,10,0,0"/>
            <Button x:Name="deleteButton" Content="Delete" Click="DeleteButton_Click"
                    Margin="0,10,0,0"
                    Background="Red" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
