<UserControl x:Class="Contacts.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Contacts.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid Background="#DDDDDD">
        <StackPanel Margin="5">
            <TextBlock x:Name="firstNameTextBlock" Text="FirstName" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="lastNameTextBlock" Text="LastName" FontSize="15" FontWeight="Bold"/>
            <TextBlock x:Name="emailTextBlock" Text="Email" FontSize="15" Foreground="DodgerBlue"/>
            <TextBlock x:Name="phoneTextBlock" Text="Phone" FontSize="15" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
